<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--import resource="database/Spring-Datasource.xml"/-->

    <!-- config connection à base de données -->
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.postgresql.Driver" />
        <property name="url" value="jdbc:postgresql://localhost:5432/dbname" />
        <property name="username" value="root" />
        <property name="password" value="password" />
    </bean>

    <!-- jdbcTemplate: object permettant de lancer de requetes sur la BD -->
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <!-- Couche DAO -->
    <!-- articleDAO: object permettant de lancer de requetes sur la table Article -->
    <bean id="articleDAO" class="org.oc_j2ee.projet3.consumer.article.DAO.impl.ArticleDAOimpl">
        <property name="jdbcTemplate" ref="jdbcTemplate" />
    </bean>

    <bean id="daoFactory" class="org.oc_j2ee.projet3.consumer.factory.impl.DaoFactoryImpl">
        <property name="articleDAO" ref="articleDAO" />
    </bean>

    <!-- Couche manager -->
    <bean id="articleManager" class="org.oc_j2ee.projet3.business.impl.manager.ArticleManagerImpl">
        <property name="daoFactory" ref="daoFactory" />
    </bean>

</beans>